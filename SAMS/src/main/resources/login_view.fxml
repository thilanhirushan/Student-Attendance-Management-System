<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>



<VBox alignment="CENTER" prefHeight="360.0" prefWidth="416.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sams.sams.view.LoginController">

    <Label prefHeight="77.0" prefWidth="113.0" text="🔐 Login" textAlignment="CENTER" textFill="#090ade">
      <font>
         <Font size="28.0" />
      </font></Label>
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button alignment="CENTER" onAction="#handleLogin" prefHeight="38.0" prefWidth="60.0" text="Login" />
    <Label fx:id="messageLabel" />
</VBox>
